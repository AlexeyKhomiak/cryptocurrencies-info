<Window x:Class="cripto_info.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cripto_info"
        mc:Ignorable="d"
        Title="{Binding Path=Content.Title, ElementName=_mainFrame}" Height="600" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <DockPanel LastChildFill="True" 
            Grid.Column="0" 
            Grid.Row="0"
                   Background="AliceBlue">
            <StackPanel DockPanel.Dock="Left"
                
                Orientation="Horizontal">
                <Label 
                Margin="10,10,10,10" 
                HorizontalAlignment="Center" 
                FontSize="16" 
                FontWeight="Bold" 
                Content="CriptoCurrencyInfo"></Label>
                <StackPanel 
                Orientation="Horizontal" 
                VerticalAlignment="Center">
                    <TextBlock 
                    HorizontalAlignment="Left" 
                    Margin="10,10,10,10">
                    <Hyperlink 
                        NavigateUri="Trending.xaml" 
                        Click="Hyperlink_Click_1">Top-7</Hyperlink>
                    </TextBlock>
                    <TextBlock 
                    HorizontalAlignment="Left" 
                    Margin="10,10,10,10">
                    <Hyperlink 
                        NavigateUri="Exchange.xaml" 
                        Click="Hyperlink_Click">Currency Converter</Hyperlink>
                    </TextBlock>
                </StackPanel>

            </StackPanel>
            <StackPanel 
                DockPanel.Dock="Right"
                
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="10">
                <!--<TextBlock 
                    Text="Search:" 
                    VerticalAlignment="Center"/>-->
                <TextBox
                    x:Name="txtSearch"
                    Width="150"
                    VerticalAlignment="Center"/>
                <Button
                    Width="50"
                    Content="Search"
                    VerticalAlignment="Center" Click="Button_Click"
                    />
            </StackPanel>
        </DockPanel>
        <DockPanel 
            Grid.Row="1">
            <Frame 
                x:Name="_mainFrame"/>
        </DockPanel>

    </Grid>
</Window>
